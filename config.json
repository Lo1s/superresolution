{
    "name": "superresolution-cnn",
    "n_gpu": 1,
    "is_gan": true,
    "arch_single": {
        "type": "UNet",
        "args": {}
    },
    "arch_esrgan_disc": {
        "type": "DiscriminatorForVGG",
        "args": {
            "image_size": 64
        }
    },
    "arch_esrgan_gen": {
        "type": "Generator",
        "args": {
            "num_rrdb_blocks": 16
        }
    },
    "data_loader": {
        "type": "SRCNNDataloader",
        "args":{
            "data_dir": "data/inputs/train_mscale_3ch.h5",
            "batch_size": 64,
            "shuffle": false,
            "validation_split": 0.25,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "gen_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "gan_epochs": 64,
        "psnr_epochs": 64,
        "psnr_lr": 0.0002,
        "gan_lr": 0.0001,
        "save_dir": "data/saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max ssim",
        "monitor_psnr": "max psnr",
        "early_stop": 30,
        "plot_epoch_result": false,

        "tensorboard": true
    }
}